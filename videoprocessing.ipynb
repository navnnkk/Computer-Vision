   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "while True:\n",
    "    res, photo = cam1.read()\n",
    "    cv.imshow('vid', photo)\n",
    "    if cv.wait(1) == 13:    # press enter key to stop Live Streaming Video\n",
    "        break\n",
    "cv.destroyAllWindows()\n",
    "cam1.release()"
   ]
  }
